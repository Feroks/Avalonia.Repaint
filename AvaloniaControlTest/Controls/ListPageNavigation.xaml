<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal"
		            HorizontalAlignment="Center"
		            >
			<Button Content="&lt;"
			        Width="60"
			        Height="60"
			        Click="OnPrevious" />
			<TextBlock
                x:Name="TextBlockField"
				MinWidth="100"
				FontSize="30"
				VerticalAlignment="Center"
				TextAlignment="Center"/>
		    <TextBox
		        x:Name="TextBoxField"
		        MinWidth="100"
		        FontSize="30"
		        VerticalAlignment="Center"
		        TextAlignment="Center"/>

			<Button Content="&gt;"
			        Width="60"
			        Height="60"
			        Click="OnNext"/>
		</StackPanel>
		<!-- Displaying Progressbar will update the values, because a redraw is happening -->
		<!-- <ProgressBar Maximum="3" Value="{Binding PageNumber, Mode=OneWay}" /> -->
	</StackPanel>
</UserControl>